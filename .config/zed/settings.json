// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // 主题
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  // 图标主题
  "icon_theme": "Material Icon Theme",
  // 键位方案
  "base_keymap": "VSCode",

  // 字体
  // 界面字体
  "ui_font_size": 17,
  "ui_font_family": "Maple Mono NF",
  // 编辑器字体
  "buffer_font_size": 17,
  "buffer_font_family": "Maple Mono NF",

  // 界面
  // 淡化未使用的代码
  "unnecessary_code_fade": 0.7,
  // vim 模式
  "vim_mode": true,
  // LSP 提示防抖延迟，ms
  "lsp_highlight_debounce": 75,
  "auto_update": true,
  // 代码补全
  "show_completions_on_input": true, // 输入时显示补全
  "show_edit_predictions": true, // 内联补全
  "features": {
    "edit_prediction_provider": "none"
  },

  // dock 面板
  // 项目面板放右边
  "project_panel": {
    "dock": "right"
  },
  // 关闭 outline 面板
  "outline_panel": {
    "button": false
  },
  // 关闭 search
  "search": {
    "button": false
  },
  // 放左边
  "terminal": {
    "button": false,
    "dock": "bottom",
    "copy_on_select": true,
    "font_family": "Maple Mono NF"
  },
  // 放右边
  "git_panel": {
    "dock": "right"
  },
  // 放左边
  "debugger": {
    "dock": "left"
  },
  // 关闭 collab panel
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "agent": {
    // "enabled": false,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "autosave": "on_focus_change",
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "errors"
  },
  "preview_tabs": {
    "enabled": true, // 文件预览，双击正式打开
    "enable_preview_from_file_finder": true, // 代码查找器中打开
    "enable_preview_from_code_navigation": true // 代码导航时打开
  },
  "git": {
    "git_gutter": "tracked_files", // 文件左边显示 git gutter，修改黄色，新增绿色，删除红色等
    "inline_blame": {
      // 在聚焦行显示 git blame
      "enabled": true, // 是否显示
      "delay_ms": 2000, // 延迟显示
      "show_commit_summary": true // 显示摘要
    }
  },

  "format_on_save": "on",
  "tab_size": 2,

  "current_line_highlight": "all"
}
